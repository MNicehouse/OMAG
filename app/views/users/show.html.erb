
 <div class="container-fluid">
   <div class="row flex-nowrap">
     <!--SIDEBAR -->
     <%# Booker %>
     <% if  (@role == 'User')%>
     <% content_for(:booker) { render partial: 'sidebar_client', locals: { myclient: @user  }} %>
     <%# Host %>
     <% elsif  (@role == 'Admin')%>
     <% content_for(:host) { render partial: 'sidebar_consultant', locals: { myconsultant: @user }} %>
     <% end%>
     <%= render  "navbar" %>
     <!--CONTENT -->
     <div class="col py-3">
       <%# Content area... %>
       <div class="container" style="margin-top: 12px">
          <h3>Hello, <%= @user.name%>!</h3>  
       </div>

       <!--CARDS -->
       <div class="container" style="margin-top: 12px">
          <% case  @redir%>
          <% when  21%>
             <%= render "responsecard", myclient: @user, responses_current: @responses_current, responses_current_exist: @responses_current_exist %>
           <% when  22%>
             <%= render "responsecardcompleted", myclient: @user, responses_completed: @responses_completed, responses_completed_exist: @responses_completed_exist %>
           <% when  61%>
             <%= render "adminresponsecard", admin_responses_current: @admin_responses_current, admin_responses_current_exist: @admin_responses_current_exist  %>
           <% when  62%>
             <%= render "adminresponsecardcompleted",  admin_responses_completed: @admin_responses_completed, admin_responses_completed_exist: @admin_responses_completed_exist %>
            <% else %>
             ...
          <% end %>
       </div>
     </div>
  </div>
</div>
  

<!-- end of file -->