<% if assessments.count > 0  %>
<div class="container">
<div class="row row-cols-1 row-cols-md-2 g-3">
 <div class="col">
<div class="card h-100  bg-light">
<h5 class="card-title text-center"><div class="card-text text-truncate" style="background-color: #dee2e6; margin-bottom: 0px"><% "#{assess_state} Asssessments" %></div></h5>
<div class="card-body bg-light">
<div class="table table-striped">
  <table id = "id-assessments-index-tbl" class = "tbl-mygrid">
    <thead>
      <tr>
        <th class="text-center" scope="col" style="display:none;">Id</th>
        <th class="text-center"scope="col">Nr</th>
        <th scope="col">Name</th>
        <th scope="col">description</th>
        <th scope="col">state</th>
        <% if @assess_link_show_flag %>
        <th scope="col">show</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
       <%= render assessments %>
    </tbody>
  </table>
</div>
<%= raw pagy_nav(mypagy) if !(mypagy.nil?) %>
 <%= hidden_field_tag 'asssessment_id'  %>
</div>
</div>
</div>
</div>
</div>
<% end  %>

