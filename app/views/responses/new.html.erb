 <div class="container-fluid">
   <div class="row flex-nowrap">
     <!--SIDEBAR -->
     <%# Booker %>
     <% if  (@role == 'User')%>
     <% content_for(:booker) { render partial: 'users/sidebar_client', locals: { myclient: current_user  }} %>
     <%# Host %>
     <% elsif  (@role == 'Admin')%>
     <% content_for(:host) { render partial: 'users/sidebar_consultant', locals: { myconsultant: current_user }} %>
     <% end%>
     <%= render  "users/navbar" %>
     <!--CONTENT -->
     <div class="col py-3">
       <%# Content area... %>
       <div class="container">
         <div class="row row-cols-1 row-cols-md-2 g-3">
           <div class="col">
             <div class="card h-100  bg-light">
               <div class="card-body bg-light">
               <h5 class="card-text text-truncate text-center" style = "background-color: #dee2e6">New assessments</h5>
                 <p>There are <%= @assessments_ready.count %> templates ready to be sent.</p>
               </div>
             </div>
           </div>
         </div>
     </div>
       <!--CARDS -->
          <% case  @redir%>
           <% when  82%>
             <%= render "sendassesstouser", assessments: @assessments_ready, mypagy: @pagy_ready, assess_state: 'ready', users: @clients, myuserspagy: @pagy_clients, assess_link_show_flag: 0 %>
           <% else %>
             ...
         <% end%>
     </div>
  </div>
</div>
